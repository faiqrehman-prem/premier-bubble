{
  "name": "nova-sonic",
  "version": "1.0.0",
  "description": "Nova Sonic Bidirectional Stream API for Amazon Bedrock",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "start": "node dist/server-cli.js",
    "dev": "ts-node-dev --respawn src/server-cli.ts",
    "cli": "ts-node src/index-cli.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "build-widget": "node scripts/build-widget.js",
    "dev-widget": "copy public\\embed-widget.dev.js public\\embed-widget.js 2>nul || cp public/embed-widget.dev.js public/embed-widget.js",
    "prod-widget": "npm run build-widget",
    "prod-build": "npm run build && npm run build-widget",
    "prod-start": "NODE_ENV=production node dist/server-cli.js --cost"
  },
  "keywords": [
    "amazon",
    "bedrock",
    "nova-sonic",
    "voice",
    "ai",
    "streaming"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.864.0",
    "@aws-sdk/client-bedrock-agent": "^3.891.0",
    "@aws-sdk/client-bedrock-agent-runtime": "^3.864.0",
    "@aws-sdk/client-bedrock-runtime": "^3.787.0",
    "@aws-sdk/client-dynamodb": "^3.891.0",
    "@aws-sdk/client-s3": "^3.908.0",
    "@aws-sdk/credential-providers": "^3.787.0",
    "@aws-sdk/lib-dynamodb": "^3.891.0",
    "@aws-sdk/s3-request-presigner": "^3.908.0",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@smithy/node-http-handler": "^4.0.4",
    "@smithy/types": "^4.2.0",
    "@types/express-session": "^1.18.2",
    "@types/html-to-text": "^9.0.4",
    "@types/multer": "^2.0.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.0",
    "express-session": "^1.18.2",
    "html-to-text": "^9.0.5",
    "jsdom": "^27.0.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.51.1",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^18.19.130",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "rimraf": "^4.0.0",
    "terser": "^5.44.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.0"
  }
}
